{
  "name": "cpp-include-refactor",
	"displayName": "C++ include refactor",
	"description": "Refactors all includes if you move a file.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.57.0"
	},
	"publisher": "tostc",
	"categories": [
		"Other"
	],
	"activationEvents": [
        "onLanguage:cpp"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration":[
			{
				"title": "C++ include refactor",
				"properties": {
					"cppIncludeRefactor.excludeDirs": {
						"type":"array",
						"default": ["external", "externals", "third_party", "third_parties"],
						"description": "These folders will not be scanned for refactoring."
					},
					"cppIncludeRefactor.removeFolderFromPath": {
						"type":"array",
						"default":["src", "inc", "include"],
						"description": "These folders will be removed from the '#include' during refactoring."
					}
				}
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.57.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"eslint": "^7.27.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2"
	}
}
